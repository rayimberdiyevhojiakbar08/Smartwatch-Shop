<%- include('../partial/navbar') %>`

<script>
    const id = `<%- show._id %>`
</script>
    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="/">Home</a>
                    <a class="breadcrumb-item text-dark" href="/cart">Shopping Cart</a>
                    <span class="breadcrumb-item active">Shop Detail</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Shop Detail Start -->
    <div class="container-fluid pb-5">
        <div class="row px-xl-5">
            <div class="col-lg-5 mb-30">
                <div id="product-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner bg-light">
                        <div class="carousel-item active">
                            <img class="w-100 h-100" src="/image/<%= show.img %>" alt="Image">
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 h-auto mb-30">
                <div class="h-100 bg-light p-30">
                    <h3><%= show.title %></h3>
                    <h3 class="font-weight-semi-bold mb-4 Cost" id="Cost">$ <%= show.buy_cost %></h3>

                    <div class="d-flex mb-4">
                        <strong class="text-dark mr-3">Color: <%= show.color %></strong>
                    </div>
                    <div class="d-flex align-items-center mb-4 pt-2">
                        <div class="input-group quantity mr-3" style="width: 130px;">
                            <div class="input-group-btn">
                                <button id = "minus" class="btn btn-primary btn-minus">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <input type="text" class="form-control bg-secondary border-0 text-center Quantity" value="1" pattern"-?(\\d+|\\d{1,3}(\\.\\d{3})*)(,\\d+)?" min="0" max="<%= show.count%>" name="quantity" id="quantity">
                            <div class="input-group-btn">
                                <button id="plus" class="btn btn-primary btn-plus">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <strong class="text-dark mr-3 Qctotal">Total: <p id="total">$<%= show.buy_cost %></p></strong>
                            <button class="btn btn-outline-dark btn-square add-to-cart" data-id="<%= show._id %>"><i class="fa fa-shopping-cart"></i></button>
                        </div>
                </div>
            </div>
        </div>
        <div class="row px-xl-5">
            <div class="col">
                <div class="bg-light p-30">
                    <div class="nav nav-tabs mb-4">
                        <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Description</a>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="tab-pane-1">
                            <p><%= show.text %></p>
                  </div>
            </div>
        </div>
    </div>
    <!-- Shop Detail End -->
 <!-- Products Start -->
 <div class="container-fluid py-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">You May Also Like</span></h2>
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel related-carousel">
                <% data.forEach(item => { %>
                <div class="product-item bg-light">
                    <div class="product-img position-relative overflow-hidden">
                        <a href="/show/<%= item._id %>">
                        <img class="img-fluid w-100" src="/image/<%= item.img %>" alt="*..^">
                        </a>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href="/show/<%= item._id %>"><%= item.title %></a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>$<%= item.buy_cost %></h5><h6 class="text-muted ml-2"><del>$<%= item.cost %></del></h6>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
</div>
</div>
<!-- Products End -->
<script src="/js/script.js"></script>


<%- include('../partial/footer') %>
